APP_NAME="GarageMeet Backend"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://tu-dominio.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Base de datos - Ajustar según tu configuración en Coolify
DB_CONNECTION=mysql
DB_HOST=database-service-name
DB_PORT=3306
DB_DATABASE=garage_meet
DB_USERNAME=garage_user
DB_PASSWORD=secure_password

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=

MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@garagemeet.com"
MAIL_FROM_NAME="${APP_NAME}"

# JWT para autenticación
JWT_SECRET=
JWT_ALGO=HS256

# Configuraciones adicionales para producción
SANCTUM_STATEFUL_DOMAINS=tu-frontend-dominio.com
SESSION_DOMAIN=.tu-dominio.com
